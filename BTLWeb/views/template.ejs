<!doctype html>
<html>
    <head>
        <title>
            app read books
        </title>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/jqurey.js"></script>
        <script src="/js/chucnang.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/footer.css" type="text/css" >   
        <link rel="stylesheet" href="/css/template.css" type="text/css" >  
        <link rel="stylesheet" href="/css/body.css" type="text/css" >  
        <link rel="stylesheet" href="/css/header.css" type="text/css" >  
        <link rel="stylesheet" href="/css/DinhDang.css" type="text/css" >  
        <script src='/css/jquery.elevatezoom.js'></script>
        <script src="/css/jquery.elevatezoom.js" type="text/javascript"></script>
        <link rel="stylesheet" href="/css/bootstrap.css" type="text/css" > 
        <style>
            #btn-report,#send-report{
                padding:5px;
                border:1px solid #f1f1f1;
                border-radius:5px;
                margin-bottom:5px;
                background-color: #e75da2;
                color: rgb(22, 17, 17);
                height: 40px;
                width: 150px;
            }
            .text-report{
                width:200px;
                display:none;
            }
           
            #textarea{
                padding:5px;
            }
            #send-report{
                margin-left:58px;
            }
            #listlike{
                list-style: none
            }
            #right{
                font-family: Arial, Helvetica, sans-serif;
                font-size: 15px;
                font-weight: normal
                
            }
            #listlike{
                height: 100px;
                overflow: auto
            }
             #right .col-sm-6{
                line-height: 35px;
            }
            .col-sm-6 span{
                color: #f4429b;
            }
            #image{
                width: 350px;
                height: 350px;
                border-radius: 5px;  
            }
            * {box-sizing: border-box;}

            
           
            .rating{
                height: 18px;
                width: 18px;
                background-color:#f1f1f1;
                position: relative;
            }
             .rating:before{
                content: "\f005";
                font-family: FontAwesome;
                font-style: normal;
                font-weight: normal;
                text-decoration: inherit;
                color: rgb(223, 130, 146);
                font-size: 16px;
                padding-right: 0.5em;
                position: absolute;
                top: -8px;
                left: 0;
            }
            .rating rating2{
                float: right;
            }
            #like{
                height: 30px;
                width: 30px;
                background-color:#f1f1f1;
                position: relative;
            }
            #like:before{
                content: "\f004";
                font-family: FontAwesome;
                font-style: normal;
                font-weight: normal;
                text-decoration: inherit;
                color: rgb(223, 130, 146);
                font-size: 25px;
                padding-right: 0;
                position: absolute;
                top: -12px;
                left: 4px;
            }
            .option ul{
                height: 50px;
                background-color: ff789e;
                border : 1px solid #f1f1f1;
            }
            .option ul li{
                font-size: 16px;
                margin: 0;
                padding-top: 2px;
            }
        </style>
    </head>
    <body>
<div id = "container">
    <!-- header starts here-->
<% include template/header %>
<div id ="container_inner">
    <!-- nav starts here-->
<div id="container_inner_nav">
<div id="container_inner_nav-inner">
<% include template/nav %>
</div>
</div>
    <!-- content starts here -->
<div id = "container_inner_content">
<div id ="container_inner_content-inner">
    <div id ="san-pham">
        <div class="container">
                <table class="row">
                    <tr>
                 <th id = "left"> <div class="col-sm-4">
                         
                              <div class="card card-body mb-3">
                                  <div class="img-zoom-container" style="display:flex;z-index: 1000;">
                                  <img style="height:350px;width:350px;" id="zoom_01" src='/image/<%= data.image %>' data-zoom-image="/image/<%= data.image %>"/>
                                  <script>
                                    $("#zoom_01").elevateZoom({
                                        zoomWindowWidth:350,
                                        zoomWindowHeight:350
                                    });    
                                </script>
                                  </div>
                                 
                              </div><br>
                              <div id="report">
                              <button id="btn-report">Report sản phẩm</button>

                              <% if(user) { %>
                                <div class="text-report">
                                    <form method="POST" action="">
                                        <label style="font-weight:normal;">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspLí do report:</label>
                                        <textarea id="textarea" rows="10" cols="35"></textarea>
                                        <input type="button" value="send" id="send-report">
                                    </form>
                                </div>
                                <div id="thanks-report" style="display:none;">
                                    <p>Cảm ơn sự góp ý của bạn!</p>
                                </div>
                              <% } %>
                              <% if(!user){ %>
                                <div class="text-report" style="margin-top:5px;margin-left:23px;">Bạn hãy đăng nhập để report về sản phẩm</div>
                              <% }%>
                            </div>
                                
                  
                  </div></th>
                  <th id="right" >
                    <div class="col-sm-6" style="z-index:-1;position:relative;" >
                    <span id="name" style="font-size: 22px"><%- data.name %></span><br>
                    <div style="display:flex">
                    <div class="rating"></div>
                    <div class="rating rating2"></div>
                    <div class="rating rating2"></div>
                    <div class="rating rating2"></div>
                    <div class="rating rating2" id="rating3"></div>
                    </div>
                    <span id="price"><%- data.price %></span><br><hr>
                    <label>Sản phẩm bán từ shop: </label>
                    <span id="shop"><%- data.shop %></span><br>
                    <label>Số sản phẩm: </label>
                    <span id="code"><%- data._id %></span><br>
                    <label>Nhãn hiệu: </label>
                    <span id="label"><%- data.label %> </span><hr>
                    <label>Trạng thái: </label>
                    <span id="state"><%- data.state %> </span><br>
                    <label>Thuộc danh mục: </label>
                    <span id="attached"><%- data.attached %></span><br>
                    <label>Khối lượng: </label>
                    <span id="weight"><%- data.weight %></span><br>
                    <label> Thương lượng: </label>
                    <span id="bargain"><%- data.bargain %></span><br>
                    <%if(user){%>
                    <img src="/imagei/shopping.png" width="30px" height="30px">
                    <input id = "tenuser" type="text" value="<%-user.username%>" hidden >
                    <%if(!checklike){%>
                    <i id = "numlike" ><%- like%></i><div id="like"></div>
                    <ul id = "listlike">
                        <%likelist.forEach(function(data){%>
                        <li><%-data%></li>
                            <%})%>
                    </ul>
                    <%}else{%>
                        <i id = "numlike" ><%- like%></i><div id="like"></div>
                        <div id = "listlike">
                            <%likelist.forEach(function(data){%>
                            <li><%-data%></li>
                                <%})%>
                            </div>
                        <%}%>


                    <%}%>
                  </div>
                </th>
                </tr>
                </table>
              </div>
        <div class="option">
            <ul >
                <li onclick="mota()">Mô tả sản phẩm</li>
                <li onclick="binhluan()">Đánh giá/Phản hồi</li>
            </ul>
        </div>
        <textarea id="mota" cols="110" rows="30" style="border: none;"><%-data.describle %></textarea>
       </div>
       <%if(user){%>
       <div id="binhluan">
           <h4>Viết bình luận</h4>
           <p id="name-comment"><%-user.username%>: </p>
            <textarea rows="5" cols="30" name="description" placeholder="Viết bình luận" id = "Comment"></textarea>
            <input type="button" id="send" value="Send">
            <textarea rows="5" cols="50" name="description" placeholder="Bình luận" id = "showcomment" disabled><%-data.comment%></textarea>
       </div>
       <%}%>
       <%if(!user){%>
           <div>Bạn hãy đăng nhập để bình luận về sản phẩm</div>
        <%}%>
</div>

</div>
</div>

<% include template/footer %>
</div>
</div>

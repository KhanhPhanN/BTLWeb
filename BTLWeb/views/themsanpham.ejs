                <li><a href="#about">Trung tâm hỗ trợ</a></li>
                <li><a href="#about">Quản lý bán hàng</a></li>
                <li><a href="#about">Shop</a></li>
             </ul>
         </div>
        
        </div>
        <div class="column middle">
          <% if(err){ %>
            <% err.forEach(function(error){%>
          <ul>
            <li><%- error.msg%></li>
          </ul>
          <%})%>
            <%}%>
            <form action="/themsanpham" method="POST">
            <div class="add">
                <p id="themsanpham">Thêm sản phẩm </p>
                <hr>
                <p><b>Ảnh sản phẩm</b> bạn phải thêm 1 sản phẩm ( tối đa 4 sản phẩm)hoặc 1 video</P>    
                <input type="text">
                <div style="display:inline;">
                <div style="display:flex;">
                    <p id="name">Tên sản phẩm</p>
                    <input type="text" id ="textinput" name ="nameproduct">
               </div> 
               <div style="display:flex;">
                   <p id = "description">Mô tả sản phẩm</p>
                   <textarea cols="50" rows="50" id="textarea" name="describleproduct"></textarea>
               </div>
               <div style="display: flex">
                   <p>Miễn phí</p>
                   <label class="switch" id="switch1">
                        <input type="checkbox" unchecked name="bargainproduct1">
                        <span class="slider round"></span>
                    </label>
               </div>
               <div style="display: flex" >
                    <p>Cho phép mặc cả</p>
                    <label class="switch" id="switch2">
                            <input type="checkbox" unchecked name="bargainproduct2">
                            <span class="slider round"></span>
                    </label>
                </div><br>
                <div>
                    <div id="list">Danh mục</div>
                    <div class="custom-select" >
                        <select name="attached">
                                <option value="Máy tính">Laptop</option>
                                <option value="Chuột">Chuột</option>
                                <option value="Bàn phím">Bàn phím</option>
                                <option value="Ổ cứng">Ổ cứng</option>
                                <option value="Tai nghe">Tai nghe</option>
                        </select>
                    </div>
                </div>
                <div>
                    <div id="nhanhieu">Nhãn hiệu</div>
                    <div class="custom-select" >
                         <select name="label">
                                 <option value="Asus">Asus</option>
                                 <option value="Dell">Dell</option>
                                 <option value="HP">HP</option>
                                 <option value="Lenovo">Lenovo</option>
                                 <option value="Acer">Acer</option>
                         </select>
                </div>
                <div>
                   <div id="khoiluong">Khối lượng</div>
                   <div class="custom-select" >
                         <select name="weight">
                              <option value="0.5kg đến 1kg">0.5kg đến 1kg</option>
                              <option value="1kg đến 2kg">1kg đến 2kg</option>
                              <option value="3kg đến  4kg ">3kg đến  4kg </option>
                              <option value="4kg đến 5kg ">4kg đến 5kg </option>
                              <option value="trên 5kg">trên 5kg</option>
                         </select>
                   </div>
                </div>
                <div>
                  <div id="trangthai">Trạng thái </div>
                  <div class="custom-select" >
                    <select name="state">
                         <option value="Còn mới">Còn mới</option>
                         <option value="Đã qua sử dụng">Đã qua sử dụng</option>
                    </select>
                  </div>
                  </div>
                    <div style="display:flex;">
                     <p id = "gia">Giá</p>
                     <input type="number" id="giatext" name="price">
                    </div>
                  </div>
                  <br>
                  <div style="display:flex">
                    <div>
                        <input  class="button button3" type="submit" name="Thêm sản phẩm" value="Thêm sản phẩm" >
                    </div>
                    <div>
                        <input  class="button button3" type="submit" name="Quay lại" value="Quay lại" >
                    </div>
                  </div>
            </div>
            </div>
          </form>
          <div class="update">
              <div class="container">
                  <div class="row">
                    <div class="col-md-6 m-auto">
                      <h1 class="text-center display-4 my-4">Mongo File Uploads</h1>
                      <form action="/upload" method="POST" enctype="multipart/form-data">
                        <div class="custom-file mb-3">
                          <input type="file" name="file" id="file" class="custom-file-input">
                          <label for="file" class="custom-file-label">Choose File</label>
                        </div>
                        <input type="submit" value="Submit" class="btn btn-primary btn-block">
                      </form>
                      <hr>
                      <% if(files){ %>
                        <% files.forEach(function(file) { %>
                          <div class="card card-body mb-3">
                            <% if(file.isImage) { %>
                              <img src="image/<%= file.filename %>" alt="">
                              <% } else { %>
                                <%= file.filename %>
                                  <% } %>
                                    <form method="POST" action="/files/<%= file._id %>?_method=DELETE">
                                      <button class="btn btn-danger btn-block mt-4">Delete</button>
                                    </form>
                          </div>
                          <% }) %>
                            <% } else { %>
                              <p>No files to show</p>
                              <% } %>
                    </div>
                  </div>
                </div>
               
          </div>
        </div>
        <div class="column side"></div>
      </div>
     
      <div class="footer">
        <p>Footer</p>
      </div>
    
      <script src="/js/themsanpham.js"></script>
      <script src="/js/jqurey.js"></script>
</body>


<% include template/body1 %>
<div id = "container">
    <!-- header starts here-->
<% include template/header %>
<div id ="container_inner">
    <!-- nav starts here-->
<div id="container_inner_nav">
<div id="container_inner_nav-inner">
<% include template/nav %>
</div>
</div>
    <!-- content starts here -->
<div id = "container_inner_content">
<div id ="container_inner_content-inner">
    <div id ="san-pham">
        <div class="container">
                <table class="row">
                    <tr>
                 <th id = "left"> <div class="col-sm-4">
                        <img id="image" width="300px" height="300px" src="image/<%= info.image %>">
                  </div></th>
                  <th id="right"><div class="col-sm-6">
                    <label>Tên sản phẩm: </label>
                    <span id="name"><%= info.name %></span><hr>
                    <label>Giá sản phẩm: </label>
                    <span id="price"><%= info.price %></span><br>
                    <label>Shop: </label>
                    <span id="shop"><%= info.shop %> </span><br>
                    <label>Số sản phẩm: </label>
                    <span id="code"> <%= info._id %></span><br>
                    <label>Nhãn hiệu: </label>
                    <span id="label"><%= info.label %> </span><hr>
                    <label>Trạng thái: </label>
                    <span id="state"><%= info.state %> </span><br>
                    <label>Danh mục: </label>
                    <span id="attached"><%= info.attached %></span><br>
                    <label>Khối lượng: </label>
                    <span id="weight"><%= info.weight %></span><br>
                    <label> Thương lượng: </label>
                    <span id="bargain"><%= info.bargain %></span><br>
                    <img src="image/shopping.png" width="40px" height="40px">
                    <input id="gio_hang" type="button" value="Thêm vào giỏ hàng"> 
                    <img id="like" src="image/like.png" width="40px" height="40px"><br>
                    <img id = "follow" src ="image/unfollow.png" width="40px" height="40px">
                    <span id ="theodoi" style="color: rgb(177, 174, 171)"> Theo dõi</span><br>
                  </div>
                </th>
                </tr>
                </table>
              </div>
        <div class="option">
            <ul>
                <li onclick="mota()">Mô tả</li>
                <li onclick="binhluan()">Đánh giá/Bình luận</li>
            </ul>
        </div>
       <div id="mota">
        <%- info.describe %>
       </div>

       <div id="binhluan">
            <label>Comment: </label>

            <textarea rows="5" cols="50" name="description" placeholder="Comment" id = "Comment"></textarea>
            <input type="button" id="send" value="Send">
            <textarea rows="5" cols="50" name="description" placeholder="Comment" id = "showcomment" disabled></textarea>
            <!-- <div id = "showcomment">
            
           </div> -->
       
       </div>
</div>

</div>
</div>

<% include template/footer %>
</div>
</div>
